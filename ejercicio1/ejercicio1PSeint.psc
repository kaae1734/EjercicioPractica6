Proceso ejercicio_1
	// Dado un número natural n se desea calcular la suma de los números naturales desde 1 hasta n.
	Definir numeroNatural Como Entero;//definimos variables
	Definir resultado Como Entero;//definimos variables
	Escribir "Dame un numero";//pedimos el numero que se desea calcular su suma 
	Leer numeroNatural;//se lee el numero
	resultado <- numeroNatural*(numeroNatural+1)/2;//formula 
	Escribir "El resultado de la suma de 1 hasta ", numeroNatural, " es: ", resultado;//resultado de la suma
FinProceso
